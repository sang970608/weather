<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".view.MainActivity"
        android:background="#E7FFFA">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/imgLoc"
                android:src="@drawable/locate"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_margin="20dp" />
            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="강서구 화곡로13길 40"
                android:textColor="#000000"
                android:textSize="20sp"
                android:id="@+id/textLoc"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/imgLoc"
                android:layout_margin="30dp"/>
            <TextView
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:id="@+id/textTemp"
                android:background="#ffffff"
                android:textAlignment="center"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textLoc"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_margin="20dp"/>
            <TextView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/textMaxMin"
                android:textAlignment="center"
                app:layout_constraintRight_toRightOf="@+id/textTemp"
                app:layout_constraintTop_toBottomOf="@+id/imgLoc"
                android:layout_margin="20dp"/>
            <TextView
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:background="#ffffff"
                app:layout_constraintRight_toRightOf="parent"
                android:id="@+id/textSun"
                android:textAlignment="center"
                app:layout_constraintTop_toBottomOf="@+id/textTemp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_margin="20dp"/>
            <TextView
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:background="#ffffff"
                app:layout_constraintRight_toRightOf="parent"
                android:id="@+id/textLatLong"
                android:textAlignment="center"
                app:layout_constraintTop_toBottomOf="@+id/textSun"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_margin="20dp"/>
            <TextView
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:background="#ffffff"
                app:layout_constraintRight_toRightOf="parent"
                android:id="@+id/textText"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/textLatLong"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_margin="20dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:id="@+id/imgWeather"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <LinearLayout
            android:id="@+id/progress_bar"
            android:gravity="center"
            android:clickable="true"
            android:background="#3E000000"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</layout>